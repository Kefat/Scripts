[URL Rewrite]
# > 通用广告请求@ddgksf2013
^https?:\/\/ad\.cyapi\.cn\/v\d - reject

[Script]
# > 图层推广@ddgksf2013
caiyun_json = type=http-response,pattern=^https?:\/\/wrapper\.cyapi\.cn\/v\d\/activity,requires-body=1,max-size=0,script-path=https://github.com/ddgksf2013/Scripts/raw/master/caiyun_json.js
# > 活动推广@ddgksf2013
caiyun_json = type=http-response,pattern=^https?:\/\/api\.caiyunapp\.com\/v\d\/activity,requires-body=1,max-size=0,script-path=https://github.com/ddgksf2013/Scripts/raw/master/caiyun_json.js
# > 首页顶部推广@ddgksf2013
caiyun_json = type=http-response,pattern=^https?:\/\/starplucker\.cyapi\.cn\/v\d/operation/homefeatures,requires-body=1,max-size=0,script-path=https://github.com/ddgksf2013/Scripts/raw/master/caiyun_json.js
# > SVIP提醒推广@ddgksf2013
caiyun_json = type=http-response,pattern=^https?:\/\/starplucker\.cyapi\.cn\/v\d/notification/message_center,requires-body=1,max-size=0,script-path=https://github.com/ddgksf2013/Scripts/raw/master/caiyun_json.js
# > 雨季特惠提醒@ddgksf2013
caiyun_json = type=http-response,pattern=^https?:\/\/starplucker\.cyapi\.cn\/v\d/config/cypage,requires-body=1,max-size=0,script-path=https://github.com/ddgksf2013/Scripts/raw/master/caiyun_json.js
# > 发现页信息流推荐@ddgksf2013
caiyun_json = type=http-response,pattern=^https?:\/\/starplucker\.cyapi\.cn\/v\d/operation/feeds,requires-body=1,max-size=0,script-path=https://github.com/ddgksf2013/Scripts/raw/master/caiyun_json.js
# > 发现页banners@ddgksf2013
caiyun_json = type=http-response,pattern=^https?:\/\/starplucker\.cyapi\.cn\/v\d/operation/banners,requires-body=1,max-size=0,script-path=https://github.com/ddgksf2013/Scripts/raw/master/caiyun_json.js
# > 发现页中间部分@ddgksf2013
caiyun_json = type=http-response,pattern=^https?:\/\/starplucker\.cyapi\.cn\/v\d/operation/features,requires-body=1,max-size=0,script-path=https://github.com/ddgksf2013/Scripts/raw/master/caiyun_json.js
# > 发现页活动@ddgksf2013
caiyun_json = type=http-response,pattern=^https?:\/\/starplucker\.cyapi\.cn\/v\d/campaigns,requires-body=1,max-size=0,script-path=https://github.com/ddgksf2013/Scripts/raw/master/caiyun_json.js

[MITM]
hostname = %APPEND% *.cyapi.cn

